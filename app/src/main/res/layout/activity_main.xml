<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register" />

    <Button
        android:id="@+id/btnLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showLoading"/>

    <Button
        android:id="@+id/btnHide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hideLoading"/>

    <Button
        android:id="@+id/btnItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showItemView"/>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home"/>

    <Button
        android:id="@+id/btnCollect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/article"/>

    <Button
        android:id="@+id/btnFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment"/>

    <Button
        android:id="@+id/btnViewPageFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_page_fragment"/>

    <Button
        android:id="@+id/mBtnBinding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/binding"/>

</LinearLayout>